<h3><%= t('menu.my_profile') %></h3>

<section class="col-sm-6 offset-1">

  <%= link_to 'Adicionar avatar' %>

  <%= form_with model: @user, url: profile_path do |form| %>

    <div class="mb-3 row">
        <%= form.label :email, class: "col-sm-2 col-form-label" %>
      <div class="col-sm-10">
        <%= form.text_field :email, class: "form-control-plaintext" %>
      </div>
    </div>

    <div class="row g-6 mb-3">
      <div class="col-6">
        <%= form.label :name, class: "form-label" %>
        <%= form.text_field :name, class: "form-control" %>
      </div>
    </div>

    <br>

    <div class="row g-6 mb-3">
      <div class="col-4">
        <%= form.label :zipcode, class: "form-label" %>
        <%= form.text_field :zipcode, class: "form-control" %>
      </div>
    </div>

    <div class="row g-6 mb-3">
      <div class="col-8">
        <%= form.label :street, class: "form-label" %>
        <%= form.text_field :street, class: "form-control" %>
      </div>
      <div class="col-2">
        <%= form.label :number, class: "form-label" %>
        <%= form.text_field :number, class: "form-control" %>
      </div>
    </div>

    <div class="row g-6 mb-3">
      <div class="col-10">
        <%= form.label :complement, class: "form-label" %>
        <%= form.text_field :complement, class: "form-control" %>
      </div>
    </div>

    <div class="row g-6 mb-3">
      <div class="col-6">
        <%= form.label :neighborhood, class: "form-label" %>
        <%= form.text_field :neighborhood, class: "form-control" %>
      </div>
      <div class="col-3">
        <%= form.label :city, class: "form-label" %>
        <%= form.text_field :city, class: "form-control" %>
      </div>
      <div class="col-1">
        <%= form.label :state, class: "form-label" %>
        <%= form.text_field :state, class: "form-control" %>
      </div>
    </div>

    <div class="mb-3">
      <%= form.submit 'Atualizar' %>
    </div>

  <% end %>
</section>