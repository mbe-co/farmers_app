<h1> <%= Customer.model_name.human(count: @customers) %> </h1>

<section class="col-sm-6 offset-1">
  <%= render partial: 'search' %>
  <hr>
  <% if @customers.present? %>
  <table class="table table-striped text-center">
    <thead>
      <tr>
        <th scope="col"><%= sort_link(@q, :name) %></th>
        <th scope="col"><%= sort_link(@q, :email) %></th>
        <th scope="col"><%= sort_link(@q, :status) %></th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody>
      <% @customers.each do |customer| %>
        <tr>
          <th scope="row"><%= customer.name %></th>
          <td><%= customer.email %></td>
          <td><%= customer.status_name %></td>
          <td><%= link_to t('btn.details'), backoffice_customer_path(customer),
            class: "btn btn-light" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</section>
<% else %>
  <h4><%= t('messages.no_register') %></h4>
<% end %>